<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/home_fragment">
    <fragment
        android:id="@+id/home_fragment"
        android:name="com.example.traveltaipei.home.presentation.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_fragment_to_attraction_fragment"
            app:destination="@id/attraction_fragment" />
    </fragment>

    <fragment
        android:id="@+id/attraction_fragment"
        android:name="com.example.traveltaipei.AttractionFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_attraction">
        <argument
            android:name="attractionId"
            app:argType="integer" />
    </fragment>

</navigation>
